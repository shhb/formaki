<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <!-- 
      version 0.3.2012MAR01 
      since   0.3.2012MAR01
      change 
   -->
<ui:image field='logo' src='../resources/en/images/flogo.png' /> <!-- FIXME "en" path must be based on user's locale.  -->
<ui:image field='google' src='../resources/en/images/googlelogo.gif' />
<ui:image field='facebook' src='../resources/en/images/facebooklogo.jpg' />
<ui:image field='twitter' src='../resources/en/images/twitterlogo.jpg' />
<ui:image field='yahoo' src='../resources/en/images/yahoologo.jpg' />
<g:HTMLPanel>
	<g:VerticalPanel width="559px" height="191px">
		<g:Cell horizontalAlignment="ALIGN_CENTER">
			<g:Label text="Welcome To Taxlet!!!"/>
		</g:Cell>
		<g:Label text="Use one of the account providers in below to login to Taxlet."/>
	</g:VerticalPanel>
	<g:VerticalPanel width="559px" height="191px">
		<g:HorizontalPanel height="122px" width="559px">
			<g:PushButton ui:field='googleButton' width='80px'   height='103px'>
		<g:upFace image='{google}' />
	</g:PushButton>
		<g:PushButton ui:field='twitterButton' width='80px'   height='103px'>
		<g:upFace image='{twitter}' />
	</g:PushButton>
			<g:PushButton ui:field='facebookButton' width='80px'   height='103px'>
		<g:upFace image='{facebook}' />
	</g:PushButton>
			<g:PushButton ui:field='yahooButton' width='80px'   height='103px'>
		<g:upFace image='{yahoo}' />
	</g:PushButton>
		</g:HorizontalPanel>
	</g:VerticalPanel>
	<g:VerticalPanel width="559px" height="191px">
		<g:Label text="Why using other login services?"/>
		<g:Label text="Short answer, to have more secure and convenient login system for users." /> 
		<g:Label text="Instead of implementing a login mechanisim, we are using login services from the most popular and secure service providers. You don&apos;t need to remember another password and just use your current account to login."/>
	</g:VerticalPanel>
</g:HTMLPanel>
</ui:UiBinder> 

