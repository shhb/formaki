<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:image field='amenu' src='../resources/en/images/alignedmenu.png' />
	<ui:image field='amenuback' src='../resources/en/images/alignedmenuback.png' />
	<ui:image field='amenuoff' src='../resources/en/images/alignedmenuoff.png' />
	<ui:image field='leftcornerdown' src='../resources/en/images/leftcornerdown.png' />
	<ui:image field='leftcornertop' src='../resources/en/images/leftcornertop.png' />
	<ui:image field='lineTop' src='../resources/en/images/linetop.png' />
	<ui:image field='lineBottom' src='../resources/en/images/linebottom.png' />
	<ui:style src="../resources/en/css/MainPanelStyleEn.css" />
		
	<g:HTMLPanel styleName="{style.base}">
		<g:HorizontalPanel>
			<g:VerticalPanel>
				<g:HorizontalPanel height="15px" styleName="{style.leftCornerUp}"
					width="40px" />
			</g:VerticalPanel>
			<g:VerticalPanel width="140px">
				<g:HorizontalPanel height="15px" width="2000px"
					styleName="{style.lineTop}" />
			</g:VerticalPanel>
		</g:HorizontalPanel>
		<g:HorizontalPanel >
			<g:VerticalPanel width="40px" height="600px">
				<g:HorizontalPanel height="65px" width="40px"
					styleName='{style.alignedMenuBack}' />
				<g:HorizontalPanel height="170px" width="40px"
					styleName='{style.alignedMenu}' />
				<g:HorizontalPanel height="170px" width="40px"
					styleName='{style.alignedMenuOff}' />
				<g:HorizontalPanel height="195px" width="40px"
					styleName='{style.alignedMenuBack}' />
			</g:VerticalPanel>
			<g:VerticalPanel  styleName="{style.workspace}">
				<g:TabLayoutPanel ui:field="rightTabPanel" width="1400px" height="100%" barUnit="EM" barHeight="2" >
					<g:tab >
						<g:header>Start</g:header>
						<g:FlowPanel />
					</g:tab>
					<g:tab>
						<g:header>Basic</g:header>
						<g:FlowPanel ui:field="dataContent" />
					</g:tab>
					<g:tab>
						<g:header>
							UiBinder Tab 1
						</g:header>
						<g:HTML>
							Hello tab 1
							<br />
							Good bye!
						</g:HTML>
					</g:tab>
					<g:tab>
						<g:header>
							UiBinder Tab 2
						</g:header>
						<g:HTML>
							<h2>Hello tab 2</h2>
						</g:HTML>
					</g:tab>
					<g:tab>
						<g:header>
							UiBinder Tab 3
						</g:header>
						<g:HTML>
							<strong>
								<i>
									<u>Hello tab number 3</u>
								</i>
							</strong>
						</g:HTML>
					</g:tab>
				</g:TabLayoutPanel>
			</g:VerticalPanel>
		</g:HorizontalPanel>
		<g:HorizontalPanel>
			<g:VerticalPanel>
				<g:HorizontalPanel height="15px" styleName="{style.leftCornerDown}"
					width="40px" />
			</g:VerticalPanel>
			<g:VerticalPanel>
				<g:HorizontalPanel height="15px" styleName="{style.lineBottom}"
					width="2000px" />
			</g:VerticalPanel>
		</g:HorizontalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 
