<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:image field='logo' src='resources/en/images/logo_small.png' />

	<ui:style>
		.link-button {
			text-decoration: none;
			color: #FFFFFF;
		}
		
		.link-button:HOVER {
			text-decoration: none;
			color: #FFFFFF;
		}
		
		@sprite .logo_small {
			margin: 4px 0 0 50px;
			gwt-image: 'logo';
			position: absolute;
		}
		.topSearchPanel {
			background: none repeat scroll 0 0 rgba(243, 243, 243, 0.85);
			border: 1px solid #CCCCCC;
			color: #CCCCCC;
			height: 43px;
		}
		
		.textSearch {
			margin-bottom: 1px;
			margin-left: 0;
			margin-right: 0;
			margin-top: 1px;
			margin-bottom: 0 !important;
			margin-left: 0 !important;
			margin-right: 0 !important;
			margin-top: 0 !important;
			padding-bottom: 4px;
			padding-left: 4px;
			padding-right: 1px;
			padding-top: 4px;
			padding-bottom: 3px;
			padding-left: 8px;
			padding-right: 0;
			padding-top: 3px;
			font-size: 14px;
			width: 336px;
			height: 20px;
		}
		
		.div-button-atl {
			background-color: #4D90FE;
			background-image: -moz-linear-gradient(center top, #4D90FE, #4787ED);
			border: 1px solid #3079ED;
			color: #FFFFFF;
		}
		
		 .div-button {
			border-bottom-left-radius: 2px;
			border-bottom-right-radius: 2px;
			border-top-left-radius: 2px;
			border-top-right-radius: 2px;
			cursor: default;
			font-size: 11px;
			font-weight: bold;
			height: 27px;
			line-height: 27px;
			outline-color: -moz-use-text-color;
			outline-style: none;
			outline-width: 0;
			padding-bottom: 0;
			padding-left: 8px;
			padding-right: 8px;
			padding-top: 0;
			text-align: center;
			min-width: 70px;
			min-height: 25px;
			margin-left: 20px;
			margin-top: 1px;

		}
		
		.div-button-blue {
			border-radius: 2px 2px 2px 2px;
			cursor: default;
			font-size: 11px;
			font-weight: bold;
			height: 27px;
			line-height: 27px;
			margin-right: 16px;
			min-width: 54px;
			outline: 0 none;
			padding: 0 8px;
			text-align: center;
		}
		
		.div-button:HOVER {
			background-color: #357AE8;
			background-image: -moz-linear-gradient(center top, #4D90FE, #357AE8);
			border: 1px solid #2F5BB7;
			box-shadow: 0 1px 1px rgba(0, 0, 0, 0.1);
		}
		
		.table {
			margin-top: 5px;
			margin-left: 175px;
			border-collapse: collapse;
		}
	</ui:style>

	<g:HTMLPanel styleName='{style.topSearchPanel}'>
		<div>
			<div class='{style.logo_small}' />
			<table class='{style.table}'>
				<tr>
					<td></td>
					<td>
						<g:TextBox styleName='{style.textSearch}' />
					</td>
					<td>
						<div
							class='{style.div-button} {style.div-button-blue} {style.div-button-atl}'
							role="button">
							<g:Anchor href="#" styleName='{style.link-button}'>Search</g:Anchor>
						</div>
					</td>
				</tr>
			</table>

		</div>
	</g:HTMLPanel>
</ui:UiBinder> 
