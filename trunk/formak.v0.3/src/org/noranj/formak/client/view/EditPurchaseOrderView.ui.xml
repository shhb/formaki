<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:image field='article32' src='../resources/en/images/article32.png' />
	<ui:image field='logo_small' src='../resources/en/images/logo_small.png' />
	<ui:style src="../resources/en/css/businessDocumentViewStyles.css" />
	<ui:with field='RESOURCE' type='org.noranj.formak.client.resources.en.GlobalResources'/>
	<g:HTMLPanel width="100%" height="100%">
		<g:DecoratorPanel>
			<g:VerticalPanel>
				<g:HorizontalPanel>
					<g:Anchor href="#savedoc" text="Save"
						styleName="{style.button} {style.left}" ui:field="saveButton"></g:Anchor>
					<g:Anchor href="#cancel" text="Cancel"
						styleName="{style.button} {style.left}" ui:field="cancelButton"></g:Anchor>
						<g:TextBox ui:field="id"></g:TextBox>
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:VerticalPanel>
						<g:Grid>
							<g:row>
								<g:customCell>
									<g:SimplePanel>
										<g:Label text="poNumber"></g:Label>
									</g:SimplePanel>
								</g:customCell>
								<g:customCell>
									<g:SimplePanel>
										<g:TextBox ui:field="poNumber"></g:TextBox>
									</g:SimplePanel>
								</g:customCell>
							</g:row>
							<g:row>
								<g:customCell>
									<g:SimplePanel>
										<g:Label text="poDate"></g:Label>
									</g:SimplePanel>
								</g:customCell>
								<g:customCell>
									<g:SimplePanel>
										<g:TextBox  ui:field="poDate"></g:TextBox>
									</g:SimplePanel>
								</g:customCell>
							</g:row>

						</g:Grid>
					</g:VerticalPanel>
					<g:VerticalPanel>
					<g:Grid><!-- Second Column -->
							<g:row>
								<g:customCell>
									<g:SimplePanel/>
								</g:customCell>
								<g:customCell>
									<g:SimplePanel/>
								</g:customCell>
							</g:row>

						</g:Grid>
					</g:VerticalPanel>
				</g:HorizontalPanel>
				<g:HorizontalPanel width="100%" height="100%" horizontalAlignment="ALIGN_CENTER">
					<g:Grid>
						<g:row>
							<g:customCell>
								<g:VerticalPanel>
									<g:Label text="shipTo"></g:Label>
									<g:TextBox ui:field="shipTo" ></g:TextBox>
								</g:VerticalPanel>
							</g:customCell>
							<g:customCell>
								<g:VerticalPanel>
									<g:Label text="billTo"></g:Label>
									<g:TextBox ui:field="billTo"></g:TextBox>
								</g:VerticalPanel>
							</g:customCell>
						</g:row>
					</g:Grid>
				</g:HorizontalPanel>

				<g:HorizontalPanel>
					<g:FlexTable ui:field="editpurchaseOrderItemsTable" addStyleNames="{style.businessDocumentViewflexTable}" />
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:VerticalPanel horizontalAlignment="ALIGN_RIGHT" width="100%">
						<g:Grid>
						<g:row>
								<g:customCell>
									<g:SimplePanel>
										<g:Label text="totalAmount"></g:Label>
									</g:SimplePanel>
								</g:customCell>
								<g:customCell>
									<g:SimplePanel>
										<g:TextBox ui:field="totalAmount" ></g:TextBox>
									</g:SimplePanel>
								</g:customCell>
							</g:row>
							<g:row>
								<g:customCell>
									<g:SimplePanel>
										<g:Label text="taxRatePercent"></g:Label>
									</g:SimplePanel>
								</g:customCell>
								<g:customCell>
									<g:SimplePanel>
										<g:TextBox ui:field="taxRatePercent"></g:TextBox>
									</g:SimplePanel>
								</g:customCell>
							</g:row>
							<g:row>
								<g:customCell>
									<g:SimplePanel>
										<g:Label text="totalTaxAmount"></g:Label>
									</g:SimplePanel>
								</g:customCell>
								<g:customCell>
									<g:SimplePanel>
										<g:TextBox ui:field="totalTaxAmount"></g:TextBox>
									</g:SimplePanel>
								</g:customCell>
							</g:row>
							<g:row>
								<g:customCell>
									<g:SimplePanel>
										<g:Label text="net"></g:Label>
									</g:SimplePanel>
								</g:customCell>
								<g:customCell>
									<g:SimplePanel>
										<g:TextBox ui:field="net"></g:TextBox>
									</g:SimplePanel>
								</g:customCell>
							</g:row>
							</g:Grid>
					</g:VerticalPanel>
				</g:HorizontalPanel>
			</g:VerticalPanel>
		</g:DecoratorPanel>
	</g:HTMLPanel>
</ui:UiBinder> 