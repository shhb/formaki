<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	body{
	background-color: white;

	}
.ad {
	background-color: #F8F8F8;
    border-color: #F5F5F5;
    border-radius: 1px 1px 1px 1px;
    border-style: solid;
    border-width: 1px;
    box-shadow: 0 0 1px rgba(101, 101, 101, 0.1);
	margin: 0 8px 8px 0;
    position: relative;
	top:2px;
	}
.adText {
	margin:  0 8px 8px 8px;
	background-color: #F8F8F8;
	color: #777777;
	padding: 9px 4px;
	font-face:Arial,sans-serif;
	font-size: 1em;

	}
.box { 
    background-color: #F8F8F8;
    border-color: #F5F5F5;
    border-radius: 1px 1px 1px 1px;
    border-style: solid;
    border-width: 1px;
    box-shadow: 0 1px 0 rgba(101, 101, 101, 0.1);
	margin: 0 8px 8px 0;
    position: relative;
    top: 1px;
}

.box:hover{
	box-shadow: 0 0 8px  rgba(0, 0, 0, 0.3);
	top: 1.5px;
	}

.titleBar {
	margin: 8px 8px 0 8px;
	background-color: #FDA352;
	border:1px solid #FD934D;
	color: white;
	padding: 8px 4px;
	font-size: 1em;
	font-family: "Century Gothic";
}
.footerBar{
	margin: 8px 8px 0 8px;
	background-color: white;
	border:1px solid #F5F5F5;
	color: #FD934D;
	padding: 8px 4px;
	font-size: 1em;
	font-stretch:wider;
	font-weight:bolder;
	font-family: "Arial";

	}
.bodyBar {
	margin:  0 8px 8px 8px;
	background-color: #F8F8F8;
	color: Black;
	padding: 8px 4px;
	font-face:Arial,sans-serif;
	font-size: 1em;

}
	</ui:style>
	<g:HTMLPanel>
		<g:DockPanel width="800px">
			<g:Dock direction="NORTH" >
				<g:HTMLPanel height="35px" styleName='{style.ad}'>
					<div class="{style.adText}">AD: The best place that we can put the advertisments.</div>
				</g:HTMLPanel>
			</g:Dock>
			<g:Dock direction="CENTER">
				<g:HTMLPanel height="300px" width="300px" styleName='{style.box}'>
					<div class="{style.titleBar}">Latest News</div>
					<div class="{style.bodyBar}" >
					<ol>
					  <li>Coffee is moving up</li>
					  <li>Tea is moving up</li>
					  <li>Milk is moving down</li>
					</ol> 
					</div>
				</g:HTMLPanel>
			</g:Dock>
			<g:Dock direction="SOUTH">
				<g:HTMLPanel height="250px" styleName='{style.box}'>
					<div class="{style.footerBar}">Detail</div>
				</g:HTMLPanel>
			</g:Dock>
			<g:Dock direction="WEST" >
				<g:HTMLPanel height="300px" width="300px" styleName='{style.box}'>
					<div class="{style.titleBar}">Latest Activity</div>
					<div class="{style.bodyBar}">
					<ol>
					  <li>Docs moved to trash </li>
					  <li>Deleted all trash</li>
					  <li>Copied 3 rows</li>
					</ol> 
					</div>
				</g:HTMLPanel>
			</g:Dock>
			<g:Dock direction="EAST">
				<g:HTMLPanel height="300px" width="300px"  styleName='{style.box}'>
					<div class="{style.titleBar}">Reminder</div>
					<div class="{style.bodyBar}">
						<ol>
						  <li>Task1</li>
						  <li>Task2</li>
						  <li>Task3</li>
						</ol> 
					</div>
				</g:HTMLPanel>
			</g:Dock>
		</g:DockPanel>
	</g:HTMLPanel>
</ui:UiBinder> 