<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:w="urn:import:org.noranj.tax.v2012.client.common"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:image field='logo_small' src='../resources/en/images/logo_small.png' />
	<g:HTMLPanel width="100%" height="" >
		<g:VerticalPanel >
			<g:HTMLPanel>
				<div>Registry Form</div>
			</g:HTMLPanel>
		</g:VerticalPanel>
		<g:DecoratorPanel width="719px" >
			<g:VerticalPanel width="696px">
				<g:HorizontalPanel>
					<g:ScrollPanel >
						<g:VerticalPanel >
							<g:Grid width="435px">
								<g:row>
									<g:customCell>
										<g:SimplePanel>
											<g:Label text="Email Address:" width="137px"></g:Label>
										</g:SimplePanel>
									</g:customCell>
									<g:customCell>
										<g:SimplePanel>
											<g:TextBox ui:field="emailAddress" width="537px"></g:TextBox>
										</g:SimplePanel>
									</g:customCell>
								</g:row>
								<g:row>
									<g:customCell>
										<g:SimplePanel>
											<g:Label text="First Name:"></g:Label>
										</g:SimplePanel>
									</g:customCell>
									<g:customCell>
										<g:SimplePanel>
											<g:TextBox ui:field="firstName" width="287px"></g:TextBox>
										</g:SimplePanel>
									</g:customCell>
								</g:row>
								<g:row>
									<g:customCell>
										<g:SimplePanel>
											<g:Label text="Last Name:"></g:Label>
										</g:SimplePanel>
									</g:customCell>
									<g:customCell>
										<g:SimplePanel>
											<g:TextBox ui:field="lastName" width="286px"></g:TextBox>
										</g:SimplePanel>
									</g:customCell>
								</g:row>
								<g:row>
									<g:customCell>
										<g:SimplePanel>
											<g:Label text="Business Name"></g:Label>
										</g:SimplePanel>
									</g:customCell>
									<g:customCell>
										<g:SimplePanel>
											<g:TextBox ui:field="businessName" width="285px"></g:TextBox>
										</g:SimplePanel>
									</g:customCell>
								</g:row>
								<g:row>
									<g:customCell>
										<g:SimplePanel>
											<g:Label text="Service Type"></g:Label>
										</g:SimplePanel>
									</g:customCell>
									<g:customCell>
									<g:SimplePanel width="190px">
										<w:SelectOneListBox ui:field="businessRole" width="181px">
											<g:item value="-1">...</g:item>
										</w:SelectOneListBox>
									</g:SimplePanel>
									</g:customCell>
								</g:row>
							</g:Grid>
						</g:VerticalPanel>
					</g:ScrollPanel>
				</g:HorizontalPanel>
				<g:HorizontalPanel width="290px" spacing="10" >
					<g:Cell horizontalAlignment="ALIGN_RIGHT">
						<g:Anchor href="#" text="Save" ui:field="saveButton" horizontalAlignment="ALIGN_LEFT"></g:Anchor>
					</g:Cell>
					<g:Cell horizontalAlignment="ALIGN_CENTER">
						<g:Anchor href="#" text="Cancel" ui:field="cancelButton" horizontalAlignment="ALIGN_RIGHT"></g:Anchor>
					</g:Cell>
					<g:TextBox ui:field="id" readOnly="true" visible="false"></g:TextBox>
				</g:HorizontalPanel>
			</g:VerticalPanel>
		</g:DecoratorPanel>
		<g:VerticalPanel>
			<g:HTMLPanel>
				<div>Please fill in the fields and then save the form to complete your registration.</div>
				<div><b>Bold</b> fields are mandatory.</div>
			</g:HTMLPanel>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 