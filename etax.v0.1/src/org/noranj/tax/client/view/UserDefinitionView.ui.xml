<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:w="urn:import:org.noranj.tax.client.common"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:image field='logo_small' src='../resources/en/images/logo_small.png' />
	<g:HTMLPanel width="100%" height="" >
		<g:VerticalPanel >
			<g:HTMLPanel>
				<div>Registry Form</div>
			</g:HTMLPanel>
		</g:VerticalPanel>
		<g:DecoratorPanel >
			<g:VerticalPanel>
				<g:HorizontalPanel>
					<g:ScrollPanel >
						<g:VerticalPanel >
							<g:Grid>
								<g:row>
									<g:customCell>
										<g:SimplePanel>
											<g:Label text="First Name"></g:Label>
										</g:SimplePanel>
									</g:customCell>
									<g:customCell>
										<g:SimplePanel>
											<g:TextBox ui:field="firstName"></g:TextBox>
										</g:SimplePanel>
									</g:customCell>
								</g:row>
								<g:row>
									<g:customCell>
										<g:SimplePanel>
											<g:Label text="Last Name"></g:Label>
										</g:SimplePanel>
									</g:customCell>
									<g:customCell>
										<g:SimplePanel>
											<g:TextBox ui:field="lastName"></g:TextBox>
										</g:SimplePanel>
									</g:customCell>
								</g:row>
								<g:row>
									<g:customCell>
										<g:SimplePanel>
											<g:Label text="Email Address"></g:Label>
										</g:SimplePanel>
									</g:customCell>
									<g:customCell>
										<g:SimplePanel>
											<g:TextBox ui:field="emailAddress"></g:TextBox>
										</g:SimplePanel>
									</g:customCell>
								</g:row>
								<g:row>
									<g:customCell>
										<g:SimplePanel>
											<g:Label text="Business Name"></g:Label>
										</g:SimplePanel>
									</g:customCell>
									<g:customCell>
										<g:SimplePanel>
											<g:TextBox ui:field="businessName"></g:TextBox>
										</g:SimplePanel>
									</g:customCell>
								</g:row>
								<g:row>
									<g:customCell>
										<g:SimplePanel>
											<g:Label text="Business Role"></g:Label>
										</g:SimplePanel>
									</g:customCell>
									<g:customCell>
									<g:SimplePanel width="190px">
										<w:SelectOneListBox ui:field="businessRole" width="180px">
											<g:item value="-1">...</g:item>
										</w:SelectOneListBox>
									</g:SimplePanel>
									</g:customCell>
								</g:row>
							</g:Grid>
						</g:VerticalPanel>
					</g:ScrollPanel>
				</g:HorizontalPanel>
				<g:HorizontalPanel >
					<g:HorizontalPanel>
						<g:Anchor href="#" text="Save" ui:field="saveButton"></g:Anchor>
						<g:Anchor href="#" text="Cancel" ui:field="cancelButton"></g:Anchor>
						<g:TextBox ui:field="id" readOnly="true" visible="false"></g:TextBox>
					</g:HorizontalPanel>
				</g:HorizontalPanel>
			</g:VerticalPanel>
		</g:DecoratorPanel>
		<g:VerticalPanel>
			<g:HTMLPanel>
				<div>Please fill and save to complete your registration.</div>
			</g:HTMLPanel>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 